<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table {
          font-family: arial, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        td, th {
          border: 1px solid #dddddd;
          text-align: left;
          padding: 8px;
        }
        table .btn{
            height: 25px;
            width: 68px;
            border-radius: 5px;
            cursor: pointer;
            display: inline-block;
            text-align: center;
            line-height: 25px;
        }
        table .btn-edit{
            background-color: yellow;
        }
        table .btn-delete{
            background-color: red;
        }
        </style>
</head>
<body>
    <table>
        <tr>
          <th>Email</th>
          <th>FirstName</th>
          <th>LastName</th>
          <th>Address</th>
          <th>Action</th>

        </tr>

        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
                <td>
                    <a href="/edit-crud?id=<%=dataTable[i].id %>" class="btn btn-edit" type="button">Edit</a>
                    <a href="/edit-crud?id=<%=dataTable[i].id %>" class="btn btn-delete" type="button">Delete</a>

                </td>
            </tr>
         <% } %>
        
      </table>
</body>
</html>